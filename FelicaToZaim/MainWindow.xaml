<Window x:Class="FelicaToZaim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FelicaToZaim"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Margin="10,10,0,0" Width="497">
            <TabItem Header="カード内容">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,-72" Height="276" VerticalAlignment="Top">
                    <DataGrid x:Name="dataGrid" ItemsSource="{Binding}" AutoGenerateColumns="True" HorizontalAlignment="Left" Margin="0,39,-10,0" Width="497"/>
                    <Button x:Name="button" Content="読み込み" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="readFelicaButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="お店">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
